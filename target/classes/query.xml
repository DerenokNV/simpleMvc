<?xml version="1.0" encoding="UTF-8"?>
<Querys>
  <query name="getBooks">
    select * from BOOKS
  </query>

  <query name="insertBooks">
    insert into BOOKS( author, title, size ) VALUES ( :author, :title, :size )
  </query>

  <query name="deleteBooksAuthor">
    delete from BOOKS where author = :author
  </query>

  <query name="deleteBooksId">
    delete from BOOKS where id = :id
  </query>

  <query name="deleteBooksTitle">
    delete from BOOKS where title = :title
  </query>

  <query name="deleteBooksSize">
    delete from BOOKS where size = :size
  </query>

</Querys>